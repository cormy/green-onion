{
    "name": "cormy/green-onion",
    "type": "library",
    "description": "Cormy GreenOnion request handler",
    "license": "MIT",
    "keywords": [
        "cormy",
        "server",
        "request",
        "handler",
        "psr",
        "psr-7",
        "http",
        "http-message",
        "request",
        "response"
    ],
    "authors": [
        {
            "name": "Michael Mayer",
            "email": "michael@schnittstabil.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "Cormy\\Server\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cormy\\Server\\": "tests"
        }
    },
    "require": {
        "php": ">=7",
        "psr/http-message": "^1.0",
        "cormy/server-request-handler": "^0.1.0",
        "cormy/server-middleware": "^0.1.0",
        "http-interop/http-middleware": "^0.3.0"
    },
    "require-dev": {
        "sugared-rim/phpunit": "^2.0",
        "vladahejda/phpunit-assert-exception": "^1.0",
        "zendframework/zend-diactoros": "^1.3"
    },
    "extra": {
        "sugared-rim/php_codesniffer": {
            "ignore_warnings_on_exit": 1
        }
    },
    "scripts": {
        "clean": "rm -rf build/ .php_cs.cache",
        "doc": [
            "sugared-sami",
            "phpmetrics --report-html build/phpmetrics/index.html src/"
        ],
        "lint": [
            "sugared-rim-cs"
        ],
        "test": [
            "tests/usage.php",
            "sugared-rim-phpunit",
            "@lint"
        ],
        "travis": [
            "tests/usage.php",
            "sugared-rim-phpunit"
        ]
    }
}
